<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.transcendence.structure">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_deer"
        android:label="@string/app_structure_name"
        android:theme="@style/NoTitleAppTheme">
        <activity
            android:name=".main.StructureSplashActivity"
            android:screenOrientation="portrait"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>


        <activity
            android:name=".main.StructureMainActivity"
            android:screenOrientation="portrait"
            android:launchMode="singleTask"/>

        <activity
            android:name=".activity.setting.SettingActivity"
            android:screenOrientation="portrait"
            android:launchMode="singleTask"
            />
    </application>

</manifest>