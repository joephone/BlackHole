<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.transcendence.blackhole.widget.viewpager.NoScrollViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_below="@id/bvHome"/>

    <View style="@style/Line" />

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/bvHome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:itemTextColor="@drawable/zuimei_bottom_nav_text_color_selector"
        app:labelVisibilityMode="labeled"
        app:menu="@menu/zuimei_bottom_nav_menu" />

</LinearLayout>
