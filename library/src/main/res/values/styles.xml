<resources>

    <!-- Base application theme.  design里无法preView 在此添加Base.后重启可见 -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="NoTitleAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here.  @mipmap/splash  @drawable/bg_color_primary_dar-->
        <item name="android:windowBackground">@color/bg_public</item>
        <item name="android:windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>



    <!-- 默认水平分割线样式 -->
    <style name="Line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">@color/colorLine</item>
    </style>

    <!-- 默认垂直分割线样式 -->
    <style name="LineVertical">
        <item name="android:layout_width">1px</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/colorLine</item>
    </style>

</resources>
