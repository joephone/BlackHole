<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.transcendence.animation">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_swan"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_deer"
        android:supportsRtl="true"
        android:theme="@style/NoTitleAppTheme">
        <activity android:name=".base.activity.AnimationSplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".base.activity.AnimationMainActivity"
            android:screenOrientation="portrait"/>

        <activity android:name=".simple.SimpleIndexActivity"
            android:screenOrientation="portrait"/>
    </application>

</manifest>