<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.transcendence.wan">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_wan"
        android:label="@string/app_wan_name"
        android:roundIcon="@mipmap/ic_wan"
        android:supportsRtl="true"
        android:theme="@style/WanAppTheme">
        <activity
            android:name=".main.WanMainActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".main.WanSplashActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"
            />
        <activity
            android:name=".search.act.WanSearchActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"
            />
    </application>

</manifest>