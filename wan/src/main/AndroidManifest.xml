            </intent-filter>
        </activity>


        <activity
            android:name=".module.mine.act.BounceActivity"/>

        <activity
            android:name=".module.main.act.DrawerMainActivity"/>

        <activity
            android:name=".module.login.act.LoginActivity" />

        <activity
