<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_public"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/llGoRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:gravity="center">

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:rotation="180"
            android:visibility="invisible"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_next"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textSize="@dimen/text_content"
            android:textColor="@color/colorTheme"
            android:text="去注册"/>

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:rotation="0"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_next"/>

    </LinearLayout>

    <com.transcendence.wan.widget.AccountInputView
        android:id="@+id/piv_login_account"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="100dp"
        android:layout_marginRight="60dp" />

    <com.transcendence.wan.widget.PasswordInputView
        android:id="@+id/piv_login_password"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_below="@+id/piv_login_account"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="60dp" />

    <com.transcendence.wan.widget.SubmitView
        android:id="@+id/sv_login"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_below="@+id/piv_login_password"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="60dp"
        android:background="@drawable/bg_solid_round_color_main_radius_max"
        android:gravity="center"
        android:text="登录"
        android:textColor="@color/text_invert"
        android:textSize="@dimen/text_content"
        app:sv_bindEditText1="@+id/piv_login_account"
        app:sv_bindEditText2="@+id/piv_login_password" />


</RelativeLayout>