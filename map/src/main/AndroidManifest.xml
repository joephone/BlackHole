<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.transcendence.map">

    <uses-permission android:name="android.permission.INTERNET" />
    <!-- 使用定位功能所需权限 -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>


    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/NoTitleAppTheme">

        <activity android:name=".act.AmapIndexActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".MapMainActivity" />
        <!-- -->
        <activity
            android:name=".act.BasicAmapActivity"
            android:screenOrientation="portrait"/>

        <!-- -->
        <activity
            android:name=".fragment.BasicAmapFragmentActivity"
            android:screenOrientation="portrait"/>

        <!-- -->
        <activity
            android:name=".act.AmapLocationActivity"
            android:screenOrientation="portrait"/>

        <!-- -->
        <activity
            android:name=".act.AmapLocationSourceActivity"
            android:screenOrientation="portrait"/>

        <activity
            android:name=".catches.act.CatchesMapActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".catches.fragment.AmapFragmentActivity" />
        <activity android:name=".catches.act.FatherActivity" />


        <!-- 高德地图  -->
        <meta-data
            android:name="com.amap.api.v2.apikey"
            android:value="66a408e855e5382e8a9920f7cbd72bbf" />

        <service
            android:name="com.amap.api.location.APSService" />

    </application>




</manifest>