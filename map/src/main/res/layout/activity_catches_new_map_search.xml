<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/laySearch"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:alpha="0.92"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/searchCountRel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">


        <TextView
            android:id="@+id/searchCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="@string/cancel"
            android:textColor="@color/orange"
            android:textSize="@dimen/size_16"
            android:visibility="gone" />

        <RelativeLayout
            android:id="@+id/searchEtLay"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_toLeftOf="@id/searchCancel"
            android:background="@drawable/catches_bg_search_edit"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/searchDelIcon"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:src="@mipmap/close"
                android:visibility="gone" />

            <EditText
                android:id="@+id/searchEt"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_centerVertical="true"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@id/searchDelIcon"
                android:background="@null"
                android:cursorVisible="true"
                android:drawableLeft="@mipmap/search_gray"
                android:drawablePadding="@dimen/dp_5"
                android:gravity="center_vertical"
                android:imeOptions="actionSearch"
                android:inputType="text"
                android:maxLines="1"
                android:paddingLeft="@dimen/dp_10"
                android:paddingRight="@dimen/dp_10"
                android:textColor="@color/white"
                android:textColorHint="@color/text_gray_light"
                android:textCursorDrawable="@drawable/color_cursor"
                android:textSize="@dimen/size_14" />
        </RelativeLayout>

    </RelativeLayout>


</LinearLayout>