<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/black"
    android:stretchColumns="1">


    <TextView
        android:id="@+id/print"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        tools:text="0"
        android:gravity="bottom|right"
        android:textColor="@color/white"
        android:textSize="30dp"
        android:padding="@dimen/all_width_height"
        />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp"
        >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" >

            <!-- 1 -->
            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:orientation="horizontal" >

                    <Button
                        android:id="@+id/btn_c"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_marginRight="1dp"
                        android:layout_weight="1"
                        android:background="@drawable/number_bt_selector"
                        android:gravity="center_vertical|center_horizontal"
                        android:text="AC"
                        android:textColor="@color/black"
                        android:textSize="40sp" />

                    <Button
                        android:id="@+id/btn_posi"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_marginRight="1dp"
                        android:layout_weight="1"
                        android:background="@drawable/number_bt_selector"
                        android:gravity="center_vertical|center_horizontal"
                        android:text="+/-"
                        android:textColor="@color/black"
                        android:textSize="40sp" />

                    <Button
                        android:id="@+id/btn_per"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_marginRight="1dp"
                        android:layout_weight="1"
                        android:background="@drawable/number_bt_selector"
                        android:gravity="center_vertical|center_horizontal"
                        android:text="%"
                        android:textColor="@color/black"
                        android:textSize="40sp" />

                    <Button
                        android:id="@+id/btn_divi"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:background="@drawable/char_bt_selector"
                        android:gravity="center_vertical|center_horizontal"
                        android:text="/"
                        android:textColor="@color/white"
                        android:textSize="40sp" />
                </LinearLayout>
            </TableRow>

            <!-- 2 -->
            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingTop="1dp" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:orientation="horizontal" >

                    <Button
                        android:id="@+id/btn_7"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_marginRight="1dp"
                        android:layout_weight="1"
                        android:background="@drawable/number_bt_selector"
                        android:gravity="center_vertical|center_horizontal"
                        android:text="7"
                        android:textColor="@color/black"
                        android:textSize="40sp" />

                    <Button
                        android:id="@+id/btn_8"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_marginRight="1dp"
                        android:layout_weight="1"
                        android:background="@drawable/number_bt_selector"
                        android:gravity="center_vertical|center_horizontal"
                        android:text="8"
                        android:textColor="@color/black"
                        android:textSize="40sp" />

                    <Button
                        android:id="@+id/btn_9"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_marginRight="1dp"
                        android:layout_weight="1"
                        android:background="@drawable/number_bt_selector"
                        android:gravity="center_vertical|center_horizontal"
                        android:text="9"
                        android:textColor="@color/black"
                        android:textSize="40sp" />

                    <Button
                        android:id="@+id/btn_mult"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:background="@drawable/char_bt_selector"
                        android:gravity="center_vertical|center_horizontal"
                        android:text="X"
                        android:textColor="@color/white"
                        android:textSize="40sp" />
                </LinearLayout>
            </TableRow>
            <!-- 3 -->
            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingTop="1dp" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:orientation="horizontal" >

                    <Button
                        android:id="@+id/btn_4"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_marginRight="1dp"
                        android:layout_weight="1"
                        android:background="@drawable/number_bt_selector"
                        android:gravity="center_vertical|center_horizontal"
                        android:text="4"
                        android:textColor="@color/black"
                        android:textSize="40sp" />

                    <Button
                        android:id="@+id/btn_5"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_marginRight="1dp"
                        android:layout_weight="1"
                        android:background="@drawable/number_bt_selector"
                        android:gravity="center_vertical|center_horizontal"
                        android:text="5"
                        android:textColor="@color/black"
                        android:textSize="40sp" />

                    <Button
                        android:id="@+id/btn_6"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_marginRight="1dp"
                        android:layout_weight="1"
                        android:background="@drawable/number_bt_selector"
                        android:gravity="center_vertical|center_horizontal"
                        android:text="6"
                        android:textColor="@color/black"
                        android:textSize="40sp" />

                    <Button
                        android:id="@+id/btn_supt"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:background="@drawable/char_bt_selector"
                        android:gravity="center_vertical|center_horizontal"
                        android:text="涓€"
                        android:textColor="@color/white"
                        android:textSize="40sp" />
                </LinearLayout>
            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingTop="1dp" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:orientation="horizontal" >

                    <Button
                        android:id="@+id/btn_1"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_marginRight="1dp"
                        android:layout_weight="1"
                        android:background="@drawable/number_bt_selector"
                        android:gravity="center_vertical|center_horizontal"
                        android:text="1"
                        android:textColor="@color/black"
                        android:textSize="40sp" />

                    <Button
                        android:id="@+id/btn_2"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_marginRight="1dp"
                        android:layout_weight="1"
                        android:background="@drawable/number_bt_selector"
                        android:gravity="center_vertical|center_horizontal"
                        android:text="2"
                        android:textColor="@color/black"
                        android:textSize="40sp" />

                    <Button
                        android:id="@+id/btn_3"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_marginRight="1dp"
                        android:layout_weight="1"
                        android:background="@drawable/number_bt_selector"
                        android:gravity="center_vertical|center_horizontal"
                        android:text="3"
                        android:textColor="@color/black"
                        android:textSize="40sp" />

                    <Button
                        android:id="@+id/btn_add"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:background="@drawable/char_bt_selector"
                        android:gravity="center_vertical|center_horizontal"
                        android:text="+"
                        android:textColor="@color/white"
                        android:textSize="40sp" />
                </LinearLayout>
            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingTop="1dp" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:orientation="horizontal" >

                    <Button
                        android:id="@+id/btn_0"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_marginRight="1dp"
                        android:layout_weight="2"
                        android:background="@drawable/number_bt_selector"
                        android:gravity="center_vertical"
                        android:paddingLeft="30dp"
                        android:text="0"
                        android:textColor="@color/black"
                        android:textSize="40sp" />

                    <Button
                        android:id="@+id/btn_poin"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_marginRight="1dp"
                        android:layout_weight="3"
                        android:background="@drawable/number_bt_selector"
                        android:gravity="center_vertical|center_horizontal"
                        android:text="."
                        android:textColor="@color/black"
                        android:textSize="40sp" />

                    <Button
                        android:id="@+id/btn_equa"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="3"
                        android:background="@drawable/char_bt_selector"
                        android:gravity="center_vertical|center_horizontal"
                        android:text="="
                        android:textColor="@color/white"
                        android:textSize="40sp" />
                </LinearLayout>
            </TableRow>

        </LinearLayout>

    </TableLayout>
</LinearLayout>