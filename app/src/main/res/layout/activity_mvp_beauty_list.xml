<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/bg_public"
    android:orientation="vertical"
    android:padding="@dimen/all_width_height"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/tv"
        style="@style/standardGreenButton"
        android:layout_marginTop="40dp"
        android:text="@string/load"/>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/all_width_height"
        tools:listitem="@layout/activity_mvp_beauty_list_item"
        />


</LinearLayout>
