<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/standard_padding"
    android:addStatesFromChildren="true">

    <Button
        android:id="@+id/start"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="@dimen/standard_padding"
        android:gravity="center"
        android:background="@drawable/water_standard_green_selector"
        android:onClick="start"
        android:text="走起" />

    <Button
        android:id="@+id/stop"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="@dimen/standard_padding"
        android:gravity="center"
        android:background="@drawable/water_standard_green_selector"
        android:onClick="stop"
        android:text="停止" />

    <Button
        android:id="@+id/startfor0"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="@dimen/standard_padding"
        android:gravity="center"
        android:background="@drawable/water_standard_green_selector"
        android:onClick="startFor0"
        android:text="从头开始" />

    <com.transcendence.blackhole.widget.custom.autoscroll.MarqueeText
        android:id="@+id/tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/standard_padding"
        android:background="@color/colorGitHubGreen"
        android:padding="@dimen/dp_10"
        android:ellipsize="marquee"
        android:singleLine="true"
        android:text="这才是真正的文字跑马灯效果这才是真正的字跑马灯效果这才是真正的"
        android:textColor="@color/colorGitHubBlack"
        android:textSize="@dimen/standard_text" >
    </com.transcendence.blackhole.widget.custom.autoscroll.MarqueeText>


</LinearLayout>