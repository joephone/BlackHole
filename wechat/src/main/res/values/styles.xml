<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="NoTitleAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here.  @mipmap/splash  @drawable/bg_color_primary_dar-->
        <!-- 窗口背景颜色 -->
        <item name="android:windowBackground">@color/bg_public</item>
        <!-- 窗口无默认标题栏 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 应用的主要色调，actionBar默认使用该颜色，Toolbar导航栏的底色 -->
        <item name="colorPrimary">@color/colorGitHubBlack</item>
        <!-- 应用的主要暗色调，statusBarColor默认使用该颜色 -->
        <item name="colorPrimaryDark">@color/colorGitHubBlack</item>
        <!-- 应用的强调色，CheckBox，RadioButton，SwitchCompat等一般控件的选中效果默认采用该颜色   Accent 强调-->
        <item name="colorAccent">@color/colorGitHubBlack</item>
    </style>

</resources>