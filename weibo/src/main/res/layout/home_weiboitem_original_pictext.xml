<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/origin_weibo_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:background="@drawable/timeline_feedcard_retweet_background_auto"
    android:clickable="true"
    android:orientation="vertical">

    <include layout="@layout/home_weiboitem_titlebar" />

    <com.transcendence.weibo.widget.emojitextview.EmojiTextView
        android:id="@+id/weibo_Content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="@dimen/home_weiboitem_marginleftright"
        android:layout_marginRight="@dimen/home_weiboitem_marginleftright"
        android:layout_marginTop="8dp"
        android:lineSpacingExtra="@dimen/home_original_weiboitem_linespace"
        tools:text="#知政#【财政部谈跨境电商新政：不会给消费者带来太大负担】财政部关税司有关负责人坦承，新政客观上会提高消费者总体税负水平。但其指出，在税率设置上暂给予一定优惠，具体而言有升有降。新政有利于电商化解部分成本，对大众消费品价格总体影响有限，不会给消费者带来太大负担。http://t.cn/RqXsr16"
        android:textColor="@color/home_original_weiboitem_font"
        android:textSize="@dimen/home_original_weiboitem_font" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/weibo_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:paddingBottom="10dp" />

    <ImageView
        android:id="@+id/splitLine"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#e5e5e5"
        android:visibility="gone" />

    <TextView
        android:id="@+id/favorities_delete"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/message_item_auto"
        android:gravity="center"
        android:text="删除"
        android:textColor="#929292"
        android:textSize="16sp"
        android:visibility="gone" />


    <include layout="@layout/mainfragment_weiboitem_bottombar" />
</LinearLayout>


